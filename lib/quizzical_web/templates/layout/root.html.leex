    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <% end %>
  </head>
  <body>
    <div>

    <%= render QuizzicalWeb.SharedView, "nav.html", assigns %>

    <main>
      <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
